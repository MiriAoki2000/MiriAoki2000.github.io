---
layout: null
permalink: /sitemap.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

  {% assign pages = site.pages | where_exp: "p", "p.sitemap != false" %}
  {% for p in pages %}
    {% if p.url and p.url != "/sitemap.xml" and p.url != "/sitemap/" and p.url != "/404.html" %}
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}{{ p.url }}</loc>
    {% if p.last_modified_at %}<lastmod>{{ p.last_modified_at | date_to_xmlschema }}</lastmod>{% endif %}
  </url>
    {% endif %}
  {% endfor %}

  {% for post in site.posts %}
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}{{ post.url }}</loc>
    <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
  </url>
  {% endfor %}

  {% for c in site.collections %}
    {% if c.label != "posts" and c.output %}
      {% for doc in c.docs %}
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}{{ doc.url }}</loc>
    {% if doc.date %}<lastmod>{{ doc.date | date_to_xmlschema }}</lastmod>{% endif %}
  </url>
      {% endfor %}
    {% endif %}
  {% endfor %}

</urlset>
